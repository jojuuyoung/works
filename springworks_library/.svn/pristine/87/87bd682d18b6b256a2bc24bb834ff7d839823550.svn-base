@charset "UTF-8";

.announce > em, .essential {color: red;}
/*테이블-내용입력*/
.input-txtbox .tbl02 tr {text-align: left;}
.input-txtbox .tbl02 th {color: #111; font-weight: normal; display: block; padding-top: 15px; text-align: left;}
.input-txtbox .tbl02 td {padding-top: 10px; display: block;}
.tbl02 {width: 100%;}
.tbl02 input[type="text"], .tbl02 input[type="password"] {width: 100%; border: 1px solid #ccc; border-radius: 3px; padding: 0 10px; line-height: 35px; height: 35px; box-sizing: border-box;}
.tbl02 input::placeholder, .tbl textarea::placeholder {color: #959595;}
.tbl02 input.gray {background: #f3f3f3;}
.tbl02 input.fix-input {width: 104px; margin-right: 5px;}
.tbl02 input.input-mail {width: calc(100% - 27px);}
.tbl02 input.input-wt33 {width: calc(33.33% - 7.5px); margin-right: 10px; float: left;}
.tbl02 input.input-wt33.end {width: calc(33.33% - 5px); margin-right: 0;}
.tbl02 input[type="file"] {display: none;}
.tbl02 .btn-file.tbl-btn {cursor: pointer; text-align: center; margin-top: 0;}
.tbl02 select::-ms-expand {display:none}
.tbl02 select {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    width: 100%;
    border: 1px solid #ccc;
    border-radius: 3px;
    padding: 0 7px;
    height: 35px;
    box-sizing: border-box;
    background: url('/img/calendar_btn1.png') no-repeat 97% 50%;
    background-size: 10px 6px;
    color: #959595;
}
.tbl02 select.sel-call {width: calc(33.33% - 7.5px); margin-right: 10px; float: left;}
.tbl02 input.wt-fix, .tbl02 .wt-fix {width: calc(100% - 114px); margin-right: 10px;}
.tbl02 span.noti {margin-top: 10px;}
.tbl02 em.email {vertical-align: middle; padding-left: 10px; display: inline-block;}
.tbl02 .tbl-btn {float: right; width: 104px; border-radius: 3px; background-color: #656870; color: #fff; font-size: 13px; font-weight: bold; line-height: 35px;}
.tbl02 .tbl-btn.btn-post {margin-top: 0;}
.tbl02 textarea {border: 1px solid #ccc; width: 100%; border-radius: 3px; height: 150px; box-sizing: border-box; overflow-y: auto; padding: 10px;}
.tbl02 .date {position: relative;}
.tbl02 .date input {padding-right: 40px;}
.tbl02 .date img {width: 19px; height: 18px; position: absolute; right: 11px; top: 0; margin-top: 9px;}

@media all and (min-width: 768px){
    .tbl02 input[type="text"] {height: 40px; line-height: 40px;}
    .tbl02 input.tab-fix, .tbl02 input.tab-fix2, .tbl02 .date.tab-fix2 {width: 303px;}
    .tbl02 input.tab-fix3 {width: 480px}
    .tbl02 select {height: 40px;}
    .tbl02 input.input-mail {width: calc(50% - 17px);}
    .tbl02 em.email {padding: 0 5px;}
    .tbl02 input.domain {width: calc(50% - 16.5px); margin-top: 0;}
    .tbl02 input.fix-input + .noti {display: inline-block; margin-left: 20px; margin-top: 0; vertical-align: 0;}
    .tbl02 select.sel-call, .tbl02 input.input-wt33, .tbl02 input.input-wt33.end {width: 70px;}
    .tbl02 select.sel-call {background-position-x: 90%;}
    .tbl02 .tbl-btn {line-height: 40px;}
    .tbl02 span.noti.in-block {margin-left: 15px; margin-top: 0; vertical-align: 0;}
}

@media all and (min-width: 1024px){
    .input-txtbox {padding: 7px !important; position: relative;}
    .input-txtbox:before {content: ''; position: absolute; left: 175px; top: 0; width: 1px; height: 100%; background: #ebebeb;}
    .input-txtbox .tbl02 th {width: 170px;}
    .input-txtbox .tbl02 th, .input-txtbox .tbl02 td {display: table-cell;}
    .input-txtbox .tbl02 td {padding-left: 30px;}
}


.centerbox-wrap {overflow: hidden; border: 1px solid #ccc; border-bottom: 1px solid #2c405a; box-sizing: border-box;}
.centerbox {text-align: center; padding: 40px 15px; border-top: 1px solid #ccc;}
.centerbox:first-child {border-top: none;}
.centerbox h5 {font-size: 30px; font-weight: bold; color: #111; letter-spacing: -2px;}
.centerbox .img-area {display: inline-block;}
.centerbox .img-area img {width: 50%; height: auto;}
.centerbox-txt {font-size: 18px; color: #111; padding: 0 34px; word-break: keep-all;}
.centerbox>span {display: inline-block; padding: 0 25px; word-break: keep-all;}

@media all and (min-width: 768px){
    .centerbox-wrap.col2 .centerbox {float: left; width: 50%; border-top: none; box-sizing: border-box;}
    .centerbox-wrap.col2 .centerbox:nth-child(2n) {border-left: 1px solid #ccc;}
    .centerbox {padding: 55px 0;}
    .centerbox-wrap.col2 .centerbox-inner {width: auto; padding: 0 30px; margin-top: 0;}
    .centerbox-wrap.col2 .centerinput {width: auto; min-height: 139px;}
    .centerbox-wrap.col2 .btn-wrap .chk-btn {width: 100%;}
    .centerbox-txt {width: auto;}
    .img-area.mt30 {margin-top: 20px;}
    .centerbox-txt.mt30 {margin-top: 35px;}
    .centerbox>span {padding: 0 95px; max-width: 500px;}
}

/*인풋 박스-공통요소*/
.inputbox-wrap {padding: 20px 15px; border: 1px solid #ccc; border-bottom-color: #0f3661; position: relative;}
.inputbox {border: 1px solid #ccc; border-radius: 5px; position: relative;}
.inputbox input[type="text"], .inputbox input[type="password"] {width: calc(100% - 30px); color: #999; line-height: 45px; height: 45px;
    padding: 0 15px; border-bottom: 1px solid #ccc;}
.inputbox input:last-child {border-bottom: none;}
span.noti {font-size: 13px; color: red; display: inline-block; margin-top: 15px;}

@media all and (min-width: 768px){
    .inputbox {width: 220px; margin: 0 auto;}
}


.checkbox input[type="checkbox"] {display: none;}
.checkbox input[type="checkbox"] + label {display: inline-block; position: relative; cursor: pointer; padding-left: 22px;}
.checkbox input[type="checkbox"] + label:before {content: ''; position: absolute; left: 0; top: 4px; width: 15px; height: 15px; box-sizing: border-box; border: 1px solid #ccc;}
.checkbox input[type="checkbox"]:checked + label:before {position: absolute; content: "\2713"; text-shadow: 1px 0 0 #1a70ab; font-size: 13px; color: #1a70ab; text-align: center; line-height: 12px;}
@media all and (min-width: 768px){
    .checkbox {font-size: 15px;}
}

.add-file-inner {margin-bottom: 5px;}
.add-file-inner:last-child {margin-bottom: 0;}
.add-file-inner .upload {width: 300px; padding: 12px 20px; background: none; border: 1px solid #eee; border-radius: 3px;}
.btn-sel {transition: all 0.3s; cursor: pointer; border-radius: 3px; color: #666; background: #ebebeb; text-align: center; width: 104px; line-height: 43px; display: inline-block;}
.btn-sel:hover {background: #d4d1d1;}