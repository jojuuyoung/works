@charset "UTF-8";

.rule-box:first-child {border-top: 1px solid #e4e4e4;}
.rule-box .rule-tit {background:#fff; cursor: pointer; position: relative;}
.rule-box .rule-tit .rule-btn {display:block; color: #666; font-size: 15px; cursor: pointer;}
.rule-box.active .rule-tit .rule-btn {color: #0f3661;}
.rule-box.active .rule-con {height: auto;}
.rule-box .rule-con {display: none; position:relative; background:#fbfbfb; box-sizing: border-box; overflow: hidden; border-bottom: 1px solid #0f3661;}
.rule-box:first-child .rule-con {display: block;}
.rule-box:last-child .rule-con {border-bottom: 0;}
.rule-box .rule-con ul {padding: 18px 10px;}
.rule-box .rule-con ul.pt0 {padding: 0 10px 18px 10px;}
.rule-box .rule-con.tr {background:#fbfbfb; background-size: 50%;}
.rule-box .rule-con.tr ul li p {letter-spacing: -0.5px; color: #666; font-size: 14px;}
.rule-box .rule-tit {padding:12px 10px; position:relative; border-bottom:1px solid #e4e4e4;}
.rule-box.active .rule-tit {border-top: 1px solid #0f3661;}
.rule-box .rule-tit p {font-size: 14px;}
.rule-box:last-child.active .rule-con {border-bottom: 1px solid #0f3661;}

.rule-box .rule-tit:after {position: absolute; content: ''; width: 20px; height: 20px; border-radius: 100%; background: #4d6e92; top:50%; transform: translateY(-50%); right: 10px;}
.rule-box .rule-tit:before {position: absolute;content: '';width: 6px;height: 6px;border-top: 2px solid #ffffff;border-right: 2px solid #ffffff;top: 33%;transform: rotate(-229deg) translateY(-50%);right: 19px;z-index: 100;}
.rule-box.active .rule-tit:after {position: absolute; content: ''; width: 20px; height: 20px; border-radius: 100%; background: #4d6e92; top:50%; transform: translateY(-50%); right: 10px;}
.rule-box.active .rule-tit:before {position: absolute;content: '';width: 6px;height: 6px;border-top: 2px solid #ffffff;border-right: 2px solid #ffffff;top:50%;transform: rotate(-45deg) translateY(-50%);right: 13px;z-index: 100;}
.rule-box.active .rule-tit {position: relative;}

@media all and (min-width: 1024px) {
    .rule-box .rule-con.tr {background-size: 35%;}
}